mixin head(title, description, keywords, description_social, image_social, url_social, type_social)
  title #{title}
  meta(name="description", content="#{description}")
  meta(name="keywords", content="#{keywords}")
  meta(property="og:title" content="#{title}")
  if typeof(description_social) !== 'undefined' && description_social != ""
    meta(property="og:description" content="#{description_social}")
  if typeof(image_social) !== 'undefined' && image_social != ""
    meta(property="og:image" content="#{image_social}")
  if typeof(url_social) !== 'undefined' && url_social != ""
    meta(property="og:url" content="#{url_social}")
  if typeof(type_social) !== 'undefined' && type_social != ""
    meta(property="og:type" content="#{type_social}")
  else
    meta(property="og:type" content="website")

mixin menu(link, title, current)
  if current != ""
    li(class="#{current}")
      a(href="#{link}", title="#{title}") !{title}
  else
    li
      a(href="#{link}", title="#{title}") !{title}

mixin menu-link(link, title, current)
  if current != ""
    li
      a(href="#{link}", title="#{title}", class="#{current}") !{title}
  else
    li
      a(href="#{link}", title="#{title}") !{title}

mixin social(link, title, icon)
  li(class="#{icon}")
    a(href="#{link}", title="#{title}") #{title}

mixin social-text(link, title, icon)
  li
    a(href="#{link}", title="#{title}")
      i.fa(class="#{icon}")
      | #{title}

mixin slider-item(src, link, title, summary)
  .slider-item(style="background-image: url(#{src})")
    .container
      .slider-size
        .slider-cover
          .table
            .table-cell
              h3.slider-heading !{title}
              p.slider-summary !{summary}
              .slider-readmore
                a(href="#{link}", title="KHÁM PHÁ NGAY") KHÁM PHÁ NGAY
mixin feature-item(link, title, src)
  .col-sm-4
    .feature-item
      a(href="#{link}", title="#{title}")
        img(src="#{src}", width="425", height="225", alt="#{title}")

mixin seller-item(src, link, title, summary)
  .seller-item
    .row
      .col-sm-4
        a(href="#{link}", title="#{title}")
          img(src="#{src}", width="270", height="221", alt="")
      .col-sm-8
        h3.seller-title
          a(href="#{link}", title="#{title}") !{title}
        p.seller-summary !{summary}
        .seller-readmore
          a(href="#{link}", title="ĐẶT MUA NGAY") ĐẶT MUA NGAY
mixin testimonial-item(src, title, summary)
  .testimonia-item.table
    .table-row
      .table-cell
        img.testimonial-media(src="#{src}", width="174", height="174", alt="!{title}")
      .table-cell
        h3.testimonial-title !{title}
        p.testimonial-summary !{summary}
mixin partner-item(link, title, src, width, height)
  .partner-item
    a(href="#{link}", title="#{title}") !{title}
      img(src="#{src}", width="#{width}", height="#{height}", alt="!{title}")
mixin product-item(src, width, height, link, title, price)
  .col-sm-4
    .product-item
      a.product-media.table(href="#{link}", title="#{title}", data-mh="media")
        .table-cell
          img(src="#{src}", width="#{width}", height="#{height}", alt="#{title}")
      h3.product-title(data-mh="title")
        a(href="#{link}", title="#{title}") #{title}
      p.product-price
        span #{price}
      a.btn-like(href="#{link}", title="#{title}") Like
      .product-cart
        a.btn-buy(href="#{link}", title="#{title}") Thêm vào giỏ
mixin category-item(src, width, height, link, title, summary)
  .col-sm-6
    .category-item
      a.category-media.table(href="#{link}", title="#{title}", data-mh="media")
        .table-cell
          img(src="#{src}", width="#{width}", height="#{height}", alt="#{title}")
      h3.category-title(data-mh="title")
        a(href="#{link}", title="#{title}") #{title}
      p.category-summary !{summary}
